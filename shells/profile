export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"

export LESSHISTFILE="$XDG_CACHE_HOME/lesshst"
export INPUTRC="$XDG_CONFIG_HOME/inputrc"

if [ "$0" = "/etc/gdm3/Xsession" -a "$DESKTOP_SESSION" = "i3" ]; then
    export $(gnome-keyring-daemon -s)
fi

# if [ "$0" = "/etc/gdm3/Xsession" -a "$DESKTOP_SESSION" = "awesome" ]; then
if [ "$DESKTOP_SESSION" = "awesome" ]; then
    export $(gnome-keyring-daemon -s)
    /bin/env sh -c "sleep 1 && /bin/env awesome-client 'require(\"widgets.simple.update_brightness_microphone_and_volume_icons\").call()'" &
fi

