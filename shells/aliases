# vim: ft=sh

alias als='nvim ~/.aliases'
alias fus='nvim ~/.functions'

alias ls='ls --color=auto -F --group-directories-first'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lal='ls -al'
alias lA='ls -A'
alias llA='ls -lA'
alias lAl='ls -Al'

# Meus apelidos
alias psgrep='ps aux | grep'
alias showppa='echo "/etc/apt/sources.list.d" && ls /etc/apt/sources.list.d'
alias diff='diff --color=auto'
alias path='echo $PATH | tr ":" "\n"'
alias glo='git log --oneline'
alias glq='git log --oneline -15'
alias gl='~/scripts/git-stuff/git-log-main-master.sh --oneline'
alias gds='git diff --staged'
alias gdsn='git diff --staged --name-only'
alias gdns='git diff --name-only --staged'
alias gd='git diff'
alias gdn='git diff --name-only'
alias gdh='git diff HEAD^..HEAD'
alias gdhn='git diff HEAD^..HEAD --name-only'
alias gdnh='git diff HEAD^..HEAD --name-only'
alias gs='git status'
alias gk='git checkout'
alias gb='git branch'
alias gsh='git stash'
alias gshp='git stash pop'
alias ts='tig status'
alias pwdcp="pwd | tr -d '\n' | xclip -selection clipboard && pwd"
alias normalizechmod='~/scripts/chmod-back-to-normal.sh'
alias browsersync='browser-sync start --server --directory --files **/*'
alias vimtime='nvim --startuptime nvim_startuptime.log'
alias vimrc='nvim ~/.config/nvim/lua/plugins/init.lua ~/.config/nvim/lua/init.lua ~/.config/nvim/lua/settings.lua ~/.config/nvim/init.vim'
alias bashrc='nvim ~/.bashrc ~/.bash_profile'
alias tmuxrc='nvim ~/.tmux.conf'
alias awerc='nvim ~/.config/awesome/rc.lua'
alias alrc='nvim ~/.config/alacritty/alacritty.yml'
alias i3rc='nvim ~/.config/i3/config ~/.config/i3/i3blocks.conf'
alias polrc='nvim ~/.config/polybar/config'
alias zshrc='nvim $ZDOTDIR/.zshrc ~/.zshenv'
alias xmorc='nvim ~/.config/xmonad/xmonad.hs ~/.xmobarrc'
alias qtlrc='nvim ~/.config/qtile/config.py'
alias lwrc='nvim ~/.config/leftwm/config.toml'
alias notouchpad='xinput disable Elan\ Touchpad'
alias vimgit='git diff --name-only | sort -u | xargs nvim'
alias tmuxls='~/scripts/parse-tmux-ls.sh'
alias glmain="$HOME/scripts/git-stuff/get-files/generic-linter.sh"
alias gtmain="$HOME/scripts/git-stuff/get-files/generic-test.sh"
alias stoprmalldocker='echo "docker ps -aq | xargs docker stop | xargs docker rm" && docker ps -aq | xargs docker stop | xargs docker rm'
alias lwmtheme='leftwm-theme'
alias enabletouchpadtap='~/scripts/enable-touchpad-tap.sh'
alias xspeed='echo "xset r rate 220 25" && xset r rate 220 25'
alias xall='~/scripts/conf-keyboard.sh && ~/scripts/enable-touchpad-tap.sh'

alias vim='nvim'

[ -f "$HOME/.local/.aliases.local" ] && source "$HOME/.local/.aliases.local"
