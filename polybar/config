[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
; primary = #ffb52a
primary = #008080
secondary = #e60053
alert = #bd2c40

[bar/bar]
enable-ipc = true
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 21
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
locale = pt_BR.UTF-8

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = FontAwesome:pixelsize=12;1
; Emojis show huge without proper scale.
; The bigger the number, the smaller the characters.
font-4 = Noto Color Emoji:scale=10;

modules-left = i3
; modules-left = i3 xwindow active-window-title
; modules-center =
modules-right = docker dunst brightness pulseaudio-microphone volume battery date-time

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

[module/xwindow]
type = internal/xwindow
; Available tags:
;   <label> (default)
format = <label>
format-background = ${color.background}
format-foreground = ${color.foreground}
format-padding = 0

; Available tokens:
;   %title%
; Default: %title%
label = %title%
label-maxlen = 50

; Used instead of label when there is no window title
; Available tokens:
;   None
label-empty = Empty
label-empty-foreground = #707880

[module/active-window-title]
type = custom/script
exec = xprop -id $(xdotool getactivewindow) WM_CLASS | sed 's/.*= ".*", "\(.*\)"$/\1/'
interval = 1

[module/battery]
type = custom/script
exec = ~/.config/polybar/scripts/battery-poly.sh
click-left = ~/.config/polybar/scripts/battery-poly.sh mouse_click
interval = 5

[module/date-time]
type = custom/script
; exec = ~/.config/polybar/scripts/date-time-poly.sh
exec = date "+%{F#6fb4d6}  %a %d %b %{F#ffffff}   %H:%M"
click-left = zenity --calendar
interval = 1

[module/pulseaudio-microphone]
type = custom/script
exec = ~/.config/polybar/scripts/pulseaudio-microphone.sh
tail = true
click-left   =  ~/.config/polybar/scripts/pulseaudio-microphone.sh --toggle &
click-right  = pavucontrol
scroll-up    = ~/.config/polybar/scripts/pulseaudio-microphone.sh --increase &
scroll-down  = ~/.config/polybar/scripts/pulseaudio-microphone.sh --decrease &
click-middle = ~/.config/polybar/scripts/pulseaudio-microphone.sh --set 30 &

[module/volume]
type = custom/ipc
hook-0 = ~/.config/polybar/scripts/volume.sh icon
initial = 1
click-left =  ~/.config/polybar/scripts/volume.sh toggle
click-right = pavucontrol
scroll-up =   ~/.config/polybar/scripts/volume.sh increase
scroll-down = ~/.config/polybar/scripts/volume.sh decrease
click-middle = ~/.config/polybar/scripts/volume.sh set

[module/brightness]
type = custom/ipc
hook-0 = ~/.config/polybar/scripts/brightness-poly.sh icon
initial = 1
scroll-up =   ~/.config/polybar/scripts/brightness-poly.sh increase
scroll-down = ~/.config/polybar/scripts/brightness-poly.sh decrease

[module/dunst]
; Hooks start at 0, but "initial" means "first hook", which
; happens to be hook-0. Same goes for polybar-msg command inside this script,
; where it calls hook 1, which is the first hook, hook-0.
; If initial was set to 0, then no hook would be executed at start
type = custom/ipc
hook-0 = ~/.config/polybar/scripts/dunst-poly.sh icon
initial = 1
click-left = ~/.config/polybar/scripts/dunst-poly.sh toggle

[module/docker]
type = custom/script
interval = 10
exec       = ~/.config/polybar/scripts/docker.sh icon
click-left = ~/.config/polybar/scripts/docker.sh notify

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
